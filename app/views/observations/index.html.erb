  <div class="container">
    <h1>üìã Recent Observations</h1>
    
    <% if @latest_mitigation_id.present? %>
      <% latest_mitigation = Mitigation.find(@latest_mitigation_id) %>
      <div class="fire-mitigation-result <%= latest_mitigation.success? ? 'success' : 'error' %>">
        <button class="close-result" onclick="this.parentElement.style.display='none'">√ó</button>
        
        <div class="result-header">
          <h3 class="result-title">
            üî• Fire Mitigation Assessment Complete
            <%= latest_mitigation.success? ? '‚úÖ' : '‚ùå' %>
          </h3>
          <div class="result-timestamp">
            <%= latest_mitigation.submitted_at.strftime("%b %d, %Y at %l:%M %p") %>
          </div>
        </div>
        
        <div class="result-message">
          <strong>Observation #<%= latest_mitigation.observation.id %> - Property ID: <%= latest_mitigation.property_id %>:</strong>
          <%= latest_mitigation.response_data['message'] %>
        </div>
        
        <% if latest_mitigation.performance_time.present? %>
          <div class="result-data">
            <h4>‚ö° Performance:</h4>
            <pre>Response Time: <%= latest_mitigation.performance_time %></pre>
          </div>
        <% end %>
        
        <% if latest_mitigation.risk_assessment.present? %>
          <div class="result-data">
            <h4>üìä Risk Assessment:</h4>
            <pre><%= JSON.pretty_generate(latest_mitigation.risk_assessment) %></pre>
          </div>
        <% end %>
        
        <% if latest_mitigation.mitigation_recommendations.present? %>
          <div class="result-data">
            <h4>üõ°Ô∏è Mitigation Recommendations:</h4>
            <% latest_mitigation.mitigation_recommendations.each do |category, recommendations| %>
              <div style="margin-bottom: 15px;">
                <strong><%= category.titleize %>:</strong>
                <ul style="margin: 5px 0; padding-left: 20px;">
                  <% recommendations.each do |recommendation| %>
                    <li><%= recommendation %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        <% end %>
        
        <% if latest_mitigation.response_data['metadata'].present? %>
          <div class="result-data" style="margin-top: 10px;">
            <h4>üîç Metadata:</h4>
            <pre><%= JSON.pretty_generate(latest_mitigation.response_data['metadata']) %></pre>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <div class="actions">
      <div class="stats">
        Showing <%= @observations.offset_value + 1 %>-<%= [@observations.offset_value + @observations.limit_value, @observations.total_count].min %> 
        of <%= @observations.total_count %> total observations
      </div>
      <div>
        <%= link_to 'üè† Address Lookup', root_path, class: 'btn' %>
        <%= link_to '‚ûï New Observation', new_observation_path, class: 'btn btn-success' %>
      </div>
    </div>
    
    <% if @observations.any? %>
      <div class="observations-grid">
        <% @observations.each do |observation| %>
          <div class="observation-card">
            <div class="card-header">
              <div class="property-info">
                <div class="property-name">
                  <%= observation.property.name %>
                  <% if observation.latest_mitigation %>
                    <span class="mitigation-status" style="margin-left: 10px;">
                      üî• <%= observation.latest_mitigation.success? ? '‚úÖ' : '‚ùå' %>
                      <span class="badge <%= observation.latest_mitigation.success? ? 'badge-yes' : 'badge-no' %>" style="font-size: 10px;">
                        <%= observation.latest_mitigation.success? ? 'ASSESSED' : 'FAILED' %>
                      </span>
                    </span>
                  <% end %>
                </div>
                <div class="property-address"><%= observation.property.normalized_address || observation.property.full_address %></div>
              </div>
              <div class="timestamp">
                <%= time_tag observation.recorded_at, observation.recorded_at.strftime("%b %d, %Y at %l:%M %p") %>
                <% if observation.latest_mitigation %>
                  <div style="font-size: 11px; color: #666; margin-top: 3px;">
                    Last Assessment: <%= observation.latest_mitigation.submitted_at.strftime("%b %d, %l:%M %p") %>
                  </div>
                <% end %>
              </div>
            </div>
            
            <div class="observation-data">
              <% if observation.observations['attic_vent_screen'].present? %>
                <div class="data-item">
                  <div class="data-label">Attic Vent Screen</div>
                  <div class="data-value">
                    <span class="badge <%= observation.observations['attic_vent_screen'] == 'true' ? 'badge-yes' : 'badge-no' %>">
                      <%= observation.observations['attic_vent_screen'] == 'true' ? 'Yes' : 'No' %>
                    </span>
                  </div>
                </div>
              <% end %>
              
              <% if observation.observations['roof_type'].present? %>
                <div class="data-item">
                  <div class="data-label">Roof Type</div>
                  <div class="data-value">Type <%= observation.observations['roof_type'].upcase %></div>
                </div>
              <% end %>
              
              <% if observation.observations['wildfire_risk'].present? %>
                <div class="data-item">
                  <div class="data-label">Wildfire Risk</div>
                  <div class="data-value">
                    <span class="badge badge-risk-<%= observation.observations['wildfire_risk'] %>">
                      Level <%= observation.observations['wildfire_risk'].upcase %>
                      <%= case observation.observations['wildfire_risk']
                          when 'a' then '(Low)'
                          when 'b' then '(Moderate)'
                          when 'c' then '(High)'
                          when 'd' then '(Extreme)'
                          end %>
                    </span>
                  </div>
                </div>
              <% end %>
              
              <% if observation.observations['window_type'].present? %>
                <div class="data-item">
                  <div class="data-label">Window Type</div>
                  <div class="data-value"><%= observation.observations['window_type'].titleize %></div>
                </div>
              <% end %>
              
              <% if observation.observations['vegetation_type'].present? %>
                <div class="data-item">
                  <div class="data-label">Vegetation Type</div>
                  <div class="data-value"><%= observation.observations['vegetation_type'].titleize %></div>
                </div>
              <% end %>
              
              <% if observation.observations['distance_to_window'].present? %>
                <div class="data-item">
                  <div class="data-label">Distance to Window</div>
                  <div class="data-value"><%= observation.observations['distance_to_window'] %> feet</div>
                </div>
              <% end %>
            </div>
            
            <% if observation.notes.present? %>
              <div class="notes">
                <strong>Notes:</strong> <%= observation.notes %>
              </div>
            <% end %>
            
            <% if observation.mitigations.any? %>
              <div class="mitigation-assessments" style="margin-top: 15px;">
                <div style="display: flex; align-items: center; margin-bottom: 15px;">
                  <h4 style="margin: 0; color: #333; font-size: 14px;">üî• Fire Mitigation Assessments (<%= observation.mitigations.count %>)</h4>
                  <button class="collapse-toggle-mini" onclick="toggleAllAssessmentsForObservation(<%= observation.id %>)">
                    <span id="toggle-text-<%= observation.id %>">Expand</span>
                  </button>
                </div>
                <% observation.mitigations.recent.each_with_index do |mitigation, index| %>
                  <% 
                    # Determine risk level based on safe_distance_diff
                    safe_distance_diff = mitigation.response_data.dig('data', 'result', 'safe_distance_diff').to_i
                    is_high_risk = safe_distance_diff > 0
                    
                    if mitigation.success?
                      if is_high_risk
                        bg_color = '#f8d7da'    # Red for high risk
                        border_color = '#dc3545' # Red border
                        text_color = '#721c24'   # Dark red text
                      else
                        bg_color = '#d4edda'    # Green for low/no risk
                        border_color = '#28a745' # Green border
                        text_color = '#155724'   # Dark green text
                      end
                    else
                      bg_color = '#f8d7da'      # Red for failed assessment
                      border_color = '#dc3545'  # Red border
                      text_color = '#721c24'     # Dark red text
                    end
                  %>
                  <div class="mitigation-card" style="margin-bottom: 15px; background: <%= bg_color %>; border-radius: 6px; border-left: 4px solid <%= border_color %>;">
                    
                    <!-- Summary Header (always visible) -->
                    <div class="assessment-summary-mini" style="background: <%= bg_color %>; color: <%= text_color %>;" onclick="toggleAssessmentInIndex(<%= observation.id %>, <%= index %>)">
                      <div>
                        <strong>
                          <%= is_high_risk ? 'üî•' : (mitigation.success? ? '‚úÖ' : '‚ùå') %> Assessment #<%= mitigation.id %>
                          <% if is_high_risk && mitigation.success? %>
                            <span style="color: #dc3545; font-size: 10px;">(HIGH RISK)</span>
                          <% end %>
                        </strong>
                        <span style="margin-left: 8px; font-size: 10px; color: #666;">
                          <%= mitigation.submitted_at.strftime("%b %d, %l:%M %p") %>
                        </span>
                        <span class="badge <%= is_high_risk ? 'badge-no' : (mitigation.success? ? 'badge-yes' : 'badge-no') %>" style="font-size: 8px; margin-left: 8px;">
                          <%= is_high_risk && mitigation.success? ? 'HIGH RISK' : mitigation.status.upcase %>
                        </span>
                      </div>
                      <span class="expand-icon-mini" id="icon-<%= observation.id %>-<%= index %>">‚ñ∂</span>
                    </div>

                    <!-- Detailed Content (collapsible) -->
                    <div class="assessment-details-mini" id="details-<%= observation.id %>-<%= index %>">
                      <!-- Request Info -->
                      <div style="font-size: 12px; margin-bottom: 10px; color: #666;">
                        <strong>Property ID:</strong> <%= mitigation.property_id %>
                        <% if mitigation.performance_time %>
                          | <strong>Performance:</strong> <%= mitigation.performance_time %>
                        <% end %>
                      </div>

                    <% if mitigation.success? && mitigation.response_data.dig('data', 'result') %>
                      <% result = mitigation.response_data.dig('data', 'result') %>
                      
                      <!-- Risk Assessment -->
                      <div style="margin-bottom: 12px;">
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); gap: 10px; font-size: 12px;">
                          <%# if result['safe_distance'] %>
<!--                            <div><strong>Safe Distance:</strong> <%#= result['safe_distance'] %>ft</div>-->
                          <%# end %>
                          <%# if result['safe_distance_base'] %>
<!--                            <div><strong>Base Distance:</strong> <%#= result['safe_distance_base'] %>ft</div>-->
                          <%# end %>
                          <% if result['distance'] %>
                            <div>
                              <strong>Current Distance:</strong> <%= result['distance'] %>ft
                              <% if safe_distance_diff > 0 %>
                                <span style="color: #dc3545;">‚ö†Ô∏è</span>
                              <% end %>
                            </div>
                          <% end %>
                          <% if result['safe_distance_calc'] %>
                            <div style="<%= safe_distance_diff > 0 ? 'color: #dc3545; font-weight: bold;' : '' %>">
                              <strong>Safe Distance:</strong> <%= result['safe_distance_calc'] %>ft
                            </div>
                          <% end %>
                          <% if result['safe_distance_diff'] %>
                            <div><strong>Difference:</strong> <%= result['safe_distance_diff'] %>ft</div>
                          <% end %>
                          <% if result['risk_type'] %>
                            <div><strong>Risk Type:</strong> <%= result['risk_type'].titleize %></div>
                          <% end %>
                          <% if result['window_type'] %>
                            <div><strong>Window:</strong> <%= result['window_type'].titleize %></div>
                          <% end %>
                          <% if result['vegetation_type'] %>
                            <div><strong>Vegetation:</strong> <%= result['vegetation_type'].titleize %></div>
                          <% end %>
                        </div>
                      </div>

                      <!-- Mitigation Recommendations -->
                      <% if result['mitigations'] %>
                        <div style="margin-top: 12px;">
                          <strong style="font-size: 13px; color: #333;">üõ°Ô∏è Recommendations:</strong>
                          <% result['mitigations'].each do |category, recommendations| %>
                            <div style="margin: 8px 0;">
                              <strong style="font-size: 12px; color: #555;"><%= category.titleize %> Solutions:</strong>
                              <ul style="margin: 4px 0 0 20px; padding: 0; font-size: 11px;">
                                <% recommendations.each do |rec| %>
                                  <li style="margin-bottom: 2px;"><%= rec %></li>
                                <% end %>
                              </ul>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    <% else %>
                      <!-- Failed Assessment -->
                      <div style="color: #721c24; font-size: 12px;">
                        <strong>Message:</strong> <%= mitigation.response_data['message'] || 'Assessment failed' %>
                      </div>
                    <% end %>

                      <!-- Metadata (collapsible) -->
                      <details style="margin-top: 10px;">
                        <summary style="font-size: 11px; color: #666; cursor: pointer;">Show Raw Data</summary>
                        <pre style="font-size: 10px; background: #f8f9fa; padding: 8px; border-radius: 3px; margin-top: 5px; overflow-x: auto;"><%= JSON.pretty_generate(mitigation.response_data) %></pre>
                      </details>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            
            <div class="card-actions" style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #eee;">
              <%= button_to observation.has_successful_mitigation? ? 'Re-assess Fire Mitigation' : 'Submit to Fire Mitigation', 
                  submit_to_fire_mitigation_observation_path(observation), 
                  method: :post,
                  class: 'btn-fire-mitigation',
                  data: { 
                    confirm: 'Submit this observation to fire mitigation service?',
                    disable_with: 'Submitting...',
                    turbo: false
                  } %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="pagination-wrapper">
        <%= paginate @observations %>
      </div>
    <% else %>
      <div class="empty-state">
        <h3>No observations recorded yet</h3>
        <p>Start by looking up an address and recording your first observation.</p>
        <%= link_to 'üè† Start with Address Lookup', root_path, class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

  <script>
    const observationStates = {};
    
    function toggleAssessmentInIndex(observationId, index) {
      const details = document.getElementById(`details-${observationId}-${index}`);
      const icon = document.getElementById(`icon-${observationId}-${index}`);
      
      if (details.classList.contains('expanded')) {
        details.classList.remove('expanded');
        icon.classList.remove('rotated');
        icon.textContent = '‚ñ∂';
      } else {
        details.classList.add('expanded');
        icon.classList.add('rotated');
        icon.textContent = '‚ñº';
      }
      
      updateToggleButtonForObservation(observationId);
    }
    
    function toggleAllAssessmentsForObservation(observationId) {
      const allDetails = document.querySelectorAll(`[id^="details-${observationId}-"]`);
      const allIcons = document.querySelectorAll(`[id^="icon-${observationId}-"]`);
      const toggleText = document.getElementById(`toggle-text-${observationId}`);
      
      // Initialize state if not exists
      if (!observationStates[observationId]) {
        observationStates[observationId] = false;
      }
      
      observationStates[observationId] = !observationStates[observationId];
      
      allDetails.forEach((details, index) => {
        const icon = allIcons[index];
        
        if (observationStates[observationId]) {
          details.classList.add('expanded');
          icon.classList.add('rotated');
          icon.textContent = '‚ñº';
        } else {
          details.classList.remove('expanded');
          icon.classList.remove('rotated');
          icon.textContent = '‚ñ∂';
        }
      });
      
      toggleText.textContent = observationStates[observationId] ? 'Collapse' : 'Expand';
    }
    
    function updateToggleButtonForObservation(observationId) {
      const allDetails = document.querySelectorAll(`[id^="details-${observationId}-"]`);
      const expandedCount = document.querySelectorAll(`[id^="details-${observationId}-"].expanded`).length;
      const toggleText = document.getElementById(`toggle-text-${observationId}`);
      
      if (expandedCount === 0) {
        observationStates[observationId] = false;
        toggleText.textContent = 'Expand';
      } else if (expandedCount === allDetails.length) {
        observationStates[observationId] = true;
        toggleText.textContent = 'Collapse';
      } else {
        observationStates[observationId] = false;
        toggleText.textContent = 'Expand';
      }
    }
    
    // Initialize all toggle button states on page load
    document.addEventListener('DOMContentLoaded', function() {
      // Find all observation IDs and initialize their toggle buttons
      const toggleButtons = document.querySelectorAll('[id^="toggle-text-"]');
      toggleButtons.forEach(button => {
        const observationId = button.id.replace('toggle-text-', '');
        updateToggleButtonForObservation(observationId);
      });
    });
